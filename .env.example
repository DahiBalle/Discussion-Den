# Discussion-Den Environment Configuration Template
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control!

# =============================================================================
# FLASK CONFIGURATION
# =============================================================================

# Flask environment: development, production, or testing
FLASK_ENV=development

# Flask debug mode (set to False in production)
FLASK_DEBUG=True

# Secret key for session management and CSRF protection
# Generate a secure random key: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=your_secret_key_here_generate_a_secure_random_key

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# PostgreSQL Database URL (REQUIRED)
# Format: postgresql+psycopg2://username:password@host:port/database_name
# Example: postgresql+psycopg2://postgres:mypassword@localhost:5432/discussion_den
DATABASE_URL=postgresql+psycopg2://username:password@localhost:5432/discussion_den

# Alternative database URLs for different environments:
# DATABASE_URL=postgresql://username:password@localhost:5432/discussion_den_dev
# DATABASE_URL=postgresql://username:password@localhost:5432/discussion_den_test

# =============================================================================
# GOOGLE OAUTH CONFIGURATION (OPTIONAL)
# =============================================================================

# Google OAuth credentials for "Sign in with Google" feature
# Get these from Google Cloud Console: https://console.cloud.google.com/
# 
# Setup steps:
# 1. Create a new project or select existing
# 2. Enable Google+ API or Google Identity API
# 3. Create OAuth 2.0 credentials (Web application)
# 4. Add authorized redirect URIs:
#    - http://localhost:5000/auth/google/callback (development)
#    - https://yourdomain.com/auth/google/callback (production)

GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here

# OAuth redirect URI (should match what's configured in Google Console)
GOOGLE_REDIRECT_URI=http://localhost:5000/auth/google/callback

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# CSRF protection (enabled by default, set to False only for testing)
WTF_CSRF_ENABLED=True

# Session cookie security (set to True in production with HTTPS)
SESSION_COOKIE_SECURE=False
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=Lax

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================

# Application name and branding
APP_NAME=Discussion Den
APP_DESCRIPTION=A Reddit-like discussion platform for college communities

# File upload configuration
MAX_CONTENT_LENGTH=16777216  # 16MB max file size
UPLOAD_FOLDER=static/uploads

# Pagination settings
POSTS_PER_PAGE=10
COMMENTS_PER_PAGE=20

# =============================================================================
# EMAIL CONFIGURATION (OPTIONAL - for future features)
# =============================================================================

# SMTP settings for sending emails (password reset, notifications, etc.)
# MAIL_SERVER=smtp.gmail.com
# MAIL_PORT=587
# MAIL_USE_TLS=True
# MAIL_USERNAME=your_email@gmail.com
# MAIL_PASSWORD=your_app_password
# MAIL_DEFAULT_SENDER=noreply@discussionden.com

# =============================================================================
# REDIS CONFIGURATION (OPTIONAL - for caching/sessions)
# =============================================================================

# Redis URL for caching and session storage
# REDIS_URL=redis://localhost:6379/0

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Log file path (leave empty to log to console only)
LOG_FILE=logs/discussion_den.log

# =============================================================================
# DEVELOPMENT/TESTING CONFIGURATION
# =============================================================================

# Enable/disable certain features for development
ENABLE_REGISTRATION=True
ENABLE_GOOGLE_AUTH=True
ENABLE_EMAIL_VERIFICATION=False

# Testing database (for running tests)
TEST_DATABASE_URL=postgresql+psycopg2://username:password@localhost:5432/discussion_den_test

# =============================================================================
# PRODUCTION CONFIGURATION NOTES
# =============================================================================

# For production deployment, make sure to:
# 1. Set FLASK_ENV=production
# 2. Set FLASK_DEBUG=False
# 3. Use a strong, unique SECRET_KEY
# 4. Set SESSION_COOKIE_SECURE=True (requires HTTPS)
# 5. Use environment-specific database URLs
# 6. Configure proper logging
# 7. Set up proper backup strategies
# 8. Use environment variables instead of .env file in production